<?xml version="1.0" encoding="UTF-8"?>
<pretty-config xmlns="http://ocpsoft.com/prettyfaces/2.0.4"
               xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
               xsi:schemaLocation="
        http://ocpsoft.com/prettyfaces/2.0.4
        http://ocpsoft.com/xml/ns/prettyfaces/ocpsoft-pretty-faces-2.0.4.xsd">

    <url-mapping id="home">
        <pattern value="/"></pattern>
        <view-id>/home.xhtml</view-id>
    </url-mapping>

    <url-mapping id="edit-catalog">
        <pattern value="/edit-catalog"></pattern>
        <view-id>/catalog/editCatalog.xhtml</view-id>
    </url-mapping>

    <url-mapping id="edit-content">
        <pattern value="/edit-content"></pattern>
        <view-id>/content/editContent.xhtml</view-id>
    </url-mapping>

    <url-mapping id="vod">
        <pattern value="/vod/#{id}"></pattern>
        <view-id>/content/viewVideoOnDemand.xhtml</view-id>
    </url-mapping>

    <url-mapping id="live">
        <pattern value="/live/#{id}"></pattern>
        <view-id>/content/viewLiveVideo.xhtml</view-id>
    </url-mapping>

    <url-mapping id="live-list">
        <pattern value="/live-list"></pattern>
        <view-id>/content/viewLiveStreamList.xhtml</view-id>
    </url-mapping>

    <url-mapping id="genre">
        <pattern value="/genre/#{id}"></pattern>
        <view-id>/content/viewContentList.xhtml</view-id>
    </url-mapping>

    <url-mapping id="full-search">
        <pattern value="/full-search/#{q}"></pattern>
        <view-id>/search/viewSearchedContentList.xhtml</view-id>
    </url-mapping>

    <url-mapping id="user">
        <pattern value="/user/#{id}"></pattern>
        <view-id>/account/userProfile.xhtml</view-id>
    </url-mapping>

    <url-mapping id="topusers">
        <pattern value="/topusers"></pattern>
        <view-id>/account/viewTopUserList.xhtml</view-id>
    </url-mapping>

    <url-mapping id="conversation_ended">
        <pattern value="/conversation_ended"></pattern>
        <view-id>/conversation_ended.xhtml</view-id>
    </url-mapping>

    <url-mapping id="logout">
        <pattern value="/logout"></pattern>
        <view-id>/home.xhtml</view-id>
        <action>#{identity.logout}</action>
    </url-mapping>

    <url-mapping id="denied">
        <pattern value="/denied"></pattern>
        <view-id>/denied.xhtml</view-id>
    </url-mapping>

    <url-mapping id="login">
        <pattern value="/login"></pattern>
        <view-id>/login.xhtml</view-id>
    </url-mapping>

    <url-mapping>
        <pattern value="/main"></pattern>
        <view-id>/main.xhtml</view-id>
    </url-mapping>

    <url-mapping>
        <pattern value="/confirm"></pattern>
        <view-id>/confirm.xhtml</view-id>
    </url-mapping>

    <url-mapping id="register">
        <pattern value="/register"></pattern>
        <view-id>/register.xhtml</view-id>
    </url-mapping>

    <url-mapping id="users">
        <pattern value="/user-list"></pattern>
        <view-id>/account/viewUserList.xhtml</view-id>
    </url-mapping>

    <url-mapping id="view-events">
        <pattern value="/view-events"></pattern>
        <view-id>/event/viewEventList.xhtml</view-id>
    </url-mapping>

    <url-mapping>
        <pattern value="/password"></pattern>
        <view-id>/password.xhtml</view-id>
    </url-mapping>

</pretty-config>
